#!/bin/bash
daytime_file="$(realpath ~/_/localhost/http-server/daytime.txt)"
calc_ranges() {
    astro="$(hdate -s -l N50 -L E30 -z3 2>/dev/null)"
    when () { echo "$astro" |grep "$1" |sed -r "s/^.*$1: ([0-9]{2}:[0-9]{2}).*$/\1/" ;}

    day="$(date -d $(when sunrise) +%s)"
    twilight="$(( $(date -d $(when sunset) +%s) - 30*60 ))"
    evening="$(( $(date -d $(when sunset) +%s) + 30*60 ))"
    night="$(date -d 22:30 +%s)"
}

case "$1" in
    day|twilight|evening|night) echo "$1" > "$daytime_file" ;;
    when)
        calc_ranges
        for daytime in day twilight evening night; do
            echo "$daytime: $(date -d @${!daytime} +%H:%M)"
        done
        echo "sunset: $(when sunset)"
        ;;
    which)
        calc_ranges

        now=$(date +%s)
        function between {
            if [ $1 -le $now ] && [ $now -lt $2 ]; then
                return 0
            else
                return 1
            fi
        }
        if between $day $twilight ; then
            echo "day"
        elif between $twilight $evening ; then
            echo "twilight"
        elif between $evening $night ; then
            echo "evening"
        else
            echo "night"
        fi
        ;;
    update)
        prev=""
        while true; do
            if [ $($(dirname $0)/utils/external-display-connected) ]; then
                sleep 10
                continue
            fi

            daytime=$($0 which)

            if [ "$daytime" != "$prev" ]; then
                prev="$daytime"
                echo "$daytime" > "$daytime_file"
            fi

            sleep 1
        done
        ;;
    server)
        # pkill http-server
        pkill "$daytime_file"

        # http-server ~/MEGAsync/browser\ extensions/darkreader/ -a 127.0.0.1 -p 9473
        # http-server "$(dirname "$daytime_file")/" -a 127.0.0.1 -p 9473
        eval "http-server $(dirname "$daytime_file" |sed -r 's| |\\ |g') -a 127.0.0.1 -p 9473 --cors='Access-Control-Allow-Origin: *'"
        # http-server "$(dirname "$daytime_file" |sed -r 's| |\\ |g')" -a 127.0.0.1 -p 9473
        ;;
    main)
        prev=""
        while true; do
            daytime=$(cat "$daytime_file")
            if [ "$daytime" != "$prev" ]; then
                case "$daytime" in
                    day)      brightness 1.0  ;;
                    twilight) brightness 0.75 ;;
                    evening)  brightness 0.5  ;;
                    night)    brightness 0.25 ;;
                esac

                bulb "$daytime"

                bgs_file="$HOME/.temp/backgrounds.txt"
                touch "$bgs_file"
                # save cur bg
                if [ "$prev" != "" ]; then
                    sed -i "/^$prev:.*\$/d" "$bgs_file"
                    echo "$prev: $(get-background)" >> "$bgs_file"
                fi
                # set bg for current time-of-day
                bg="$(cat "$bgs_file" |grep -E "^$daytime:" |sed -r "s/^$daytime: (.*)$/\1/")"
                if [ "$bg" ]; then
                    set-background "$bg"
                fi

                prev="$daytime"
            fi
            sleep 1
        done
        ;;
    all)
        echo $($0 which) > "$daytime_file"
        parallel -n "
            $0 update
            $0 server
            $0 main
        "
        ;;
    *)
        # echo "Options: day twilight evening night when which update server main all"
        echo "Options: day twilight evening night when"
        ;;
esac
