#!/bin/sh
flags="-i"
while getopts ":x:E" opt; do  # order is important?!
    case $opt in
        x) flags="$flags -w" ;;
        E) flags="$flags -E" ;;
    esac
done
for last; do :; done
search="$last"

procs="$(ps aux)"
procs="$(echo "$procs" |grep -v -E "^[^ ]+ +($(_parents)) ")"  # except this `proc` and its parents
# procs="$(echo "$procs" |grep $flags "$search")"
echo "$procs" |grep $flags --color=auto "$search"
