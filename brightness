#!/bin/sh
set -e
value_percents="$1"

if [ "$value_percents" ]; then
    if [ "$(echo "$value_percents <= 1" |bc)" = "1" ]; then
        value_percents="$(echo "$value_percents * 100" |bc |sed -r 's ^([0-9]+)\.[0-9]+$ \1 ')"
    fi
    sudo brightnessctl set "$value_percents"%
else
    echo $(($(brightnessctl get) * 100 / $(brightnessctl max)))%
fi
