#!/bin/sh
set -e

# git add .
# # git add -u
# # git add -u -- .
# git commit -a -m "$@"

flags="$1"
eval "git add $(_path 2 "$@")"

remote_repo="$(git remote -v |head --lines 1 |sed -r 's~^origin[ \t]+git@github.com:([^/]+)/[^/]+\.git \(fetch\)$~\1~')"
if [ "$remote_repo" = "MacPaw" ]; then
    flags="--gpg-sign $flags"
fi

eval "git commit $flags"  # `git commit -m "$1"` does not work
